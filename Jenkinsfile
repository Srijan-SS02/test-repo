pipeline {
  
  agent any 
  
  stages {

    stage("build"){

      steps{
        echo ' building the application'
        echo 'Scan periodically after every minute'
      }
    }

    stage("test"){

      steps{
        echo ' testing the application'
      }
    }


    stage("deploy"){

      steps{
        echo ' deploying the application'
      }
    }
  }
}
